CXX 		= c++
CXXFLAGS 	= -Wall -Wextra -Werror -std=c++98 -g
DEBUGFLAGS 	= -g

SRCS		= main.cpp Weapon.cpp HumanA.cpp HumanB.cpp
HEADERS		= Weapon.hpp HumanA.hpp HumanB.hpp
OBJS		= $(SRCS:.cpp=.o)
NAME		= test

all: $(NAME)

%.o: %.cpp $(HEADERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@ 

$(NAME): $(OBJS) $(HEADERS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean: 
	rm $(OBJS)

fclean: clean
	rm $(NAME)

re: fclean all

.PHONY: all, clean, fclean, re
