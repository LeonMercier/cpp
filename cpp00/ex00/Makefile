CXX 		= c++
CXXFLAGS 	= -Wall -Wextra -Werror
DEBUGFLAGS 	= -g

SRCS		= megaphone.cpp
OBJS		= $(SRCS:.cpp=.o)
NAME		= megaphone

all: $(NAME)

%.o: %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@ 

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean: 
	rm $(OBJS)

fclean: clean
	rm $(NAME)

re: fclean all

.PHONY: all, clean, fclean, re
